+  /**
+   * Tests a layout overrides that are moderated and translated.
+   */
+  public function testModerationTranslatedOverrides() {
+    $assert_session = $this->assertSession();
+    $page = $this->getSession()->getPage();
+
+    $node = Node::load(1);
+
+    // Create a draft layout override.
